// schema.prisma

generator client {
  provider = "prisma-client-js"
  seed    = "prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url = env("VPS_DATABASE_URL") // uses connection pooling
}

model Question {
  id   Int   @id @default(autoincrement())
  category     String
  categoryId   Int
  group  String
  isIndex Boolean @default(false)
  character    String?
  answer  String?
  additionalQuestion Additionalquestion?
  choices ChoicesOnQuestions[]
}

model Additionalquestion {
  id  Int  @id @default(autoincrement())
  question Question @relation(fields: [id], references: [id])
  phrase_front String?
  phrase_back String?
  sound_resource String?
}

model Choice {
  id  Int  @id @default(autoincrement())
  character String
  en String
  image String
  styleHeight String?
  styleWidth String?
  questions ChoicesOnQuestions[]
}

model ChoicesOnQuestions {
  question Question @relation(fields: [questionId], references: [id])
  questionId Int
  choice Choice @relation(fields: [choiceId], references: [id])
  choiceId Int
  @@id([questionId, choiceId])
}